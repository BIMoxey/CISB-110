import java.util.Scanner;

class operators7 {
  public static void main(String[] args) {
    
    Scanner io = new Scanner(System.in);
    
    int num;
    
    System.out.print("Enter your number: ");
      num = io.nextInt();
    
    int num1;
    num1 = num%2;
    
    System.out.println("The number " + num + " remainder is " + num1);
    
      
    
  }
}
